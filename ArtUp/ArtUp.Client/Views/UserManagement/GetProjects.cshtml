@model IEnumerable<ArtUp.Client.Models.AdminProjectsViewModel>

@{
    ViewBag.Title = "GetProjects";
}

<div class="main-container admin-main">
    <div class="col-md-2 col-sm-2 col-lg-2">
        <div class="navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="/UserManagement/Users">Пользователи</a></li>
                <li><a href="/UserManagement/GetProjects" class="active">Проекты</a></li>
                <li><a href="/UserManagement/GetSettings">Настройки</a></li>
            </ul>
        </div>
    </div>
    <div class="col-md-10 col-sm-10 col-lg-10">
        <div role="tabpanel">
            <ul class="product-tab" role="tablist">
                <li role="presentation"><a href="#finished" aria-controls="finished" role="tab" data-toggle="tab">Ожидающие выплат</a></li>
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Одобренные</a></li>
                <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Ожидающие</a></li>
                <li role="presentation"><a href="#sponsors" aria-controls="sponsors" role="tab" data-toggle="tab">Отвергнутые</a></li>
                <li role="presentation"><a href="#inactive" aria-controls="inactive" role="tab" data-toggle="tab">Неактивные</a></li>
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="finished">
                    <div class="row">
                        @foreach (var project in ViewBag.AllProjects.FinishedProject)
                        {
                            <div class="col-md-4 col-sm-6">
                                <div class="single-project">
                                    <div class="product-upper">
                                        <img src="/Content/img/@project.Avatar" alt="">
                                        <div class="product-hover">
                                            <a href="/Home/Project/@project.Id" class="add-to-cart-link"><i class="fa fa-link"></i> Подробнее</a>
                                        </div>
                                    </div>
                                    <h2><a href="/Home/Project/@project.Id">@project.Title</a></h2>
                                    <div class="product-carousel-price">
                                        <ins>собрано @project.CurrentMoney из @project.RequiredMoney</ins>
                                    </div>
                                    <div class="product-option-shop">

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade in active" id="home">
                    <div class="row">
                        @foreach (var project in ViewBag.AllProjects.ApprovedProjects)
                        {
                            <div class="col-md-4 col-sm-6">
                                <div class="single-project">
                                    <div class="product-upper">
                                        <img src="/Content/img/@project.Avatar" alt="" >
                                        <div class="product-hover">
                                            <a href="/Home/Project/@project.Id" class="add-to-cart-link"><i class="fa fa-link"></i> Подробнее</a>
                                        </div>
                                    </div>
                                    <h2><a href="/Home/Project/@project.Id">@project.Title</a></h2>
                                    <div class="product-carousel-price">
                                        <ins>собрано @project.CurrentMoney из @project.RequiredMoney</ins>
                                    </div>
                                    <div class="product-option-shop">

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="profile">
                    <div class="row">
                        @foreach (var project in ViewBag.AllProjects.PendingProjects)
                        {
                            <div class="col-md-4 col-sm-6">
                                <div class="single-project">
                                    <div class="product-upper">
                                        <img src="/Content/img/@project.Avatar" alt="" >
                                        <div class="product-hover">
                                            <a href="/Home/Project/@project.Id" class="add-to-cart-link"><i class="fa fa-link"></i> Подробнее</a>
                                        </div>
                                    </div>
                                    <h2><a href="/Home/Project/@project.Id">@project.Title</a></h2>
                                    <div class="product-option-shop">
                                        <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/UserManagement/ApproveProject/@project.Id">Одобрить</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade in" id="sponsors">
                    <div class="row">
                        @foreach (var project in ViewBag.AllProjects.RejectProjects)
                        {
                            <div class="col-md-4 col-sm-6">
                                <div class="single-project">
                                    <div class="product-upper">
                                        <img src="/Content/img/@project.Avatar" alt="" >
                                        <div class="product-hover">
                                            <a href="/Home/Project/@project.Id" class="add-to-cart-link"><i class="fa fa-link"></i> Подробнее</a>
                                        </div>
                                    </div>
                                    <h2><a href="/Home/Project/@project.Id">@project.Title</a></h2>
                                    <div class="product-carousel-price">
                                        <ins>осталось @(project.RequiredMoney - project.CurrentMoney)</ins>
                                    </div>
                                    <div class="product-option-shop">

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane fade in" id="inactive">
                    <div class="row">
                        @foreach (var project in ViewBag.AllProjects.InactiveProjects)
                        {
                            <div class="col-md-4 col-sm-6">
                                <div class="single-project">
                                    <div class="product-upper">
                                        <img src="/Content/img/@project.Avatar" alt="">
                                        <div class="product-hover">
                                            <a href="/Home/Project/@project.Id" class="add-to-cart-link"><i class="fa fa-link"></i> Подробнее</a>
                                        </div>
                                    </div>
                                    <h2><a href="/Home/Project/@project.Id">@project.Title</a></h2>
                                    <div class="product-carousel-price">
                                        @if (project.IsSuccessful)
                                        {
                                            <ins>Успешно завершенный проект</ins>
                                        }
                                        else
                                        {
                                            <ins>Провально завершенный проект</ins>
                                        }
                                    </div>
                                    <div class="product-option-shop">

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>