@model IEnumerable<ArtUp.Client.Models.UserViewModel>

@{
    ViewBag.Title = "Список пользователей системы";
}

<div class="main-container admin-main">
    <div class="col-md-2 col-sm-2 col-lg-2">
        <div class="navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="/UserManagement/Users" class="active">Пользователи</a></li>
                <li><a href="/UserManagement/GetProjects">Проекты</a></li>
                <li><a href="/UserManagement/GetSettings">Настройки</a></li>
            </ul>
        </div>
    </div>
    <div class="col-md-10 col-sm-10 col-lg-10">
        <h2>Список пользователей</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Avatar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Avatar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.ActionLink("Подробнее", "GetUser", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>