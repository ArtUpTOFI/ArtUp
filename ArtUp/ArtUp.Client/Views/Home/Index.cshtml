</div> <!-- End slider area -->
<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Лучшие проекты</h2>
                    <div class="product-carousel">
                        @foreach (var project in ViewBag.BestProjects)
                        {
                            <div class="single-project">
                                <div class="product-f-image">
                                    <img src="/Content/img/@project.Avatar" alt="">
                                    <div class="product-hover">
                                        <a href="/Home/Project/@project.Id" class="add-to-cart-link"><i class="fa fa-link"></i> Подробнее</a>
                                    </div>
                                </div>
                                <h2><a href="/Home/Project/@project.Id">@project.Title</a></h2>
                                <div class="product-carousel-price">
                                    <ins>осталось @(project.RequiredMoney - project.CurrentMoney)</ins>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->

<div class="product-widget-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="single-project-widget">
                    <h2 class="product-wid-title">Завершённые проекты</h2>
                    <a href="/Home/Filter?filter=best" class="wid-view-more">Смотреть Все</a>
                    @foreach (var project in ViewBag.BestProjectsBottom)
                    {
                        <div class="single-wid-product">
                            <a href="single-project.html"><img src="/Content/img/@project.Avatar" alt="" class="product-thumb">
                            </a>
                            <h2><a href="/Home/Project/@project.Id">@project.Title</a></h2>
                            <div class="product-wid-price">
                                <ins>осталось @(project.RequiredMoney - project.CurrentMoney)</ins>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6" style="border-left: 1px solid #333;">
                <div class="single-project-widget">
                    <h2 class="product-wid-title">Все проекты</h2>
                    <a href="/Home/Filter?filter=all" class="wid-view-more">Смотреть Все</a>
                    @foreach (var project in ViewBag.AllProjects)
                    {
                        <div class="single-wid-product">
                            <a href="single-project.html"><img src="/Content/img/@project.Avatar" alt="" class="product-thumb">
                            </a>
                            <h2><a href="/Home/Project/@project.Id">@project.Title</a></h2>
                            <div class="product-wid-price">
                                <ins>осталось @(project.RequiredMoney - project.CurrentMoney)</ins>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> <!-- End product widget area -->