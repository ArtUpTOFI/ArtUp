@model ArtUp.Client.Models.ProjectViewModel
@{
    ViewBag.Title = "CreateProject";
}

<style>
    ol, ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .form-list > li {
        margin-bottom: 10px;
    }

    label.required em, span.required em, p.required {
        content: ' *';
        color: #df280a;
    }

    .main-container {
        font-family: "Helvetica Neue", Verdana, Arial, sans-serif;
        color: #434343;
        font-size: 12px;
        line-height: 1.5;
        position: relative;
        max-width: 1260px;
        margin: 0 auto;
        padding: 30px;
        font-family: "Helvetica Neue", Verdana, Arial, sans-serif;
    }

        .main-container h1 {
            font-size: 24px;
        }

        .main-container h2 {
            font-size: 20px;
        }

        .main-container .page-title {
            text-transform: uppercase;
            font-weight: 600;
            border-bottom: 1px solid #ededed;
            padding-bottom: 3px;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

    .form-list .field, .form-list .wide, .form-list .control {
        margin-bottom: 10px;
    }

    .main-container form input[type="text"],
    .main-container form input[type="email"],
    .main-container form input[type="password"] {
        padding: 3px 5px;
        width: 400px;
    }

    .pay-main .inner_section {
        position: relative;
        margin-bottom: 20px;
        padding: 20px;
        border-top: 4px solid transparent;
        -moz-border-radius: 4px;
        border-radius: 4px;
        background-color: #e7f9f5;
        -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .pay-main .pay__left, .pay-main .pay__right {
        padding-left: 0;
    }

    .pay-main hr {
        border-top: 1px solid #8a9;
    }

    .pay-main .donate__status {
        margin-top: -15px;
    }

    .pay-main .section__body__left {
        display: inline-block;
    }
</style>

