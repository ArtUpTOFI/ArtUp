@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Art Up</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/responsive.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="user-menu">
                        <ul>
                            @if (User.IsInRole("user"))
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                }
                                <li><a href="#"><i class="fa fa-user"></i>Здравствуйте, @User.Identity.GetUserName()</a></li>
                                if (User.IsInRole("admin"))
                                {
                                   <li><a href="/UserManagement/Users"><i class="fa fa-user"></i>Кабинет администратора</a></li>
                                }
                                else
                                {
                                    <li><a href="/Home/MyProjects"><i class="fa fa-heart"></i>Мои проекты</a></li>
                                    <li><a href="/Home/CreateProject"><i class="fa fa-heart"></i>Cоздать проект</a></li>
                                }
                                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-user"></i>Выйти</a></li>
                            }
                            else
                            {
                                <li><a href="~/Account/Login"><i class="fa fa-user"></i>Войти</a></li>
                                <li><a href="~/Account/Register"><i class="fa fa-heart"></i>Зарегистрироваться</a></li>
                            }                            
                            @*<li><a href="/UserManagement/Users"><i class="fa fa-user"></i>Кабинет администратора</a></li>*@
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->
    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="/Home/Index">A<span>rt Up</span></a></h1>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="single-sidebar">
                        <div style="margin-top: 40px">
                            <div class="col-sm-8">
                                <input type="text" placeholder="Искать по имени проекта" id="search-query" style="height: 50px;">
                            </div>
                            <div class="col-sm-2">
                                <a href="/Home/SearchResults?query=" id="find-link"><input class="button-search" type="submit" value="Найти" id="find-projects"></a>
                            </div>
                            <div class="col-sm-2">
                                <a href="/Home/WideSearch"><button class="artup-button button-search">Расширенный поиск</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav categories">
                        <li style="background-color: #999999"><a href="/Home/Index">Поддержать:</a></li>
                        <li class="music"><a href="/Home/Category?category=music">Музыка</a></li>
                        <li class="literature"><a href="/Home/Category?category=literature">Литература</a></li>
                        <li class="movie"><a href="/Home/Category?category=movie">Кино и видео</a></li>
                        <li class="photo"><a href="/Home/Category?category=photo">Фотография</a></li>
                        <li class="art"><a href="/Home/Category?category=art">Живопись</a></li>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->
        @RenderBody()
    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="footer-about-us">
                        <h2>A<span>rt Up</span></h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Perferendis sunt id doloribus vero quam laborum quas alias dolores blanditiis iusto consequatur, modi aliquid eveniet eligendi iure eaque ipsam iste, pariatur omnis sint! Suscipit, debitis, quisquam. Laborum commodi veritatis magni at?</p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Полезные ссылки</h2>
                        <ul>
                            <li><a target="_blank" href="/Home/Rules">Соглашение</a></li>
                            <li><a target="_blank" href="https://ru.wikipedia.org/wiki/%D0%9A%D1%80%D0%B0%D1%83%D0%B4%D1%84%D0%B0%D0%BD%D0%B4%D0%B8%D0%BD%D0%B3">О краудфандинге</a></li>
                            <li><a target="_blank" href="http://www.nalog.gov.by/ru/">Портал МНС Беларуси</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Категории</h2>
                        <ul>
                            <li><a href="/Home/Category?category=music">Музыка</a></li>
                            <li><a href="/Home/Category?category=literature">Литература</a></li>
                            <li><a href="/Home/Category?category=movie">Кино и видео</a></li>
                            <li><a href="/Home/Category?category=photo">Фотография</a></li>
                            <li><a href="/Home/Category?category=art">Живопись</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer top area -->

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; 2016 Art Up. All Rights Reserved. Created by the best team</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="footer-card-icon">
                        <i class="fa fa-cc-discover"></i>
                        <i class="fa fa-cc-mastercard"></i>
                        <i class="fa fa-cc-paypal"></i>
                        <i class="fa fa-cc-visa"></i>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer bottom area -->
    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Scripts/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/Scripts/main.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#find-projects').on('click', function () {
                var query = $('#search-query').val();
                var searchLink = $('#find-link');
                searchLink.attr('href', '/Home/SearchResults?query=' + query);
            });
            if ($(".categories .@Html.ViewBag.Category").length) {
                $(".categories .@Html.ViewBag.Category").addClass('active');
            }
        });
    </script>
</body>
</html>
