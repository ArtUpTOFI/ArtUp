@model ArtUp.Client.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>
    ol, ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .form-list > li {
        margin-bottom: 10px;
    }

    label.required em, span.required em, p.required {
        content: ' *';
        color: #df280a;
    }

    .main-container {
        font-family: "Helvetica Neue", Verdana, Arial, sans-serif;
        color: #434343;
        font-size: 12px;
        line-height: 1.5;
        position: relative;
        max-width: 1260px;
        margin: 0 auto;
        padding: 30px;
        font-family: "Helvetica Neue", Verdana, Arial, sans-serif;
    }

        .main-container h1 {
            font-size: 24px;
        }

        .main-container h2 {
            font-size: 20px;
        }

        .main-container .page-title {
            text-transform: uppercase;
            font-weight: 600;
            border-bottom: 1px solid #ededed;
            padding-bottom: 3px;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

    .form-list .field, .form-list .wide, .form-list .control {
        margin-bottom: 10px;
    }

    .main-container form input[type="text"],
    .main-container form input[type="email"],
    .main-container form input[type="password"] {
        padding: 3px 5px;
        width: 400px;
    }

    .pay-main .inner_section {
        position: relative;
        margin-bottom: 20px;
        padding: 20px;
        border-top: 4px solid transparent;
        -moz-border-radius: 4px;
        border-radius: 4px;
        background-color: #e7f9f5;
        -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .pay-main .pay__left, .pay-main .pay__right {
        padding-left: 0;
    }

    .pay-main hr {
        border-top: 1px solid #8a9;
    }

    .pay-main .donate__status {
        margin-top: -15px;
    }

    .pay-main .section__body__left {
        display: inline-block;
    }
</style>

<div class="main-container create-main">
    <div class="account-create">
        <div class="page-title">
            <h1>Создание аккаунта</h1>
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "scaffold-form", role = "form", @id = "form-validate", @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="fieldset">
                <input type="hidden" name="success_url" value="">
                <input type="hidden" name="error_url" value="">
                <p class="form-instructions">Пожалуйста введите необходимую информацию для создания аккаунта</p>
                <p class="required">* Обязательные поля</p>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <ul class="form-list">
                    <li>
                        <label for="email_address" class="required"><em>*</em>Email</label>
                        <div class="input-box">
                            @Html.TextBoxFor(m => m.Email, new { @autocapitalize = "off", @autocorrect = "off", @spellcheck = "false", @name = "email", @id = "email_address", @value = "", @title = "Email Address", @class = "input-text validate-email required-entry" })
                        </div>
                    </li>
                    <li class="fields">
                        <div class="field">
                            <label for="password" class="required"><em>*</em>Пароль</label>
                            <div class="input-box">
                                @Html.PasswordFor(m => m.Password, new { @name = "password", @id = "password", @title = "Password", @class = "input-text required-entry validate-password" })
                            </div>
                        </div>
                        <div class="field">
                            <label for="confirmation" class="required"><em>*</em>Подтвердите пароль</label>
                            <div class="input-box">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-text required-entry validate-cpassword", @name = "confirmation", @title = "Confirm Password", @id = "confirmation" })
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="buttons-set">
                <p class="back-link"><a href="/Account/Login" class="back-link"><small>« </small>Назад</a></p>
                <button type="submit" title="Register" class="button"><span><span>Зарегистрироваться</span></span></button>
            </div>
        }
    </div>
</div>
    
